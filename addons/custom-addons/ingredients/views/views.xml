<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="ingredients.list">
      <field name="name">ingredients list</field>
      <field name="model">ingredients.ingredients</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="type"/>
          <field name="calories"/>
          <field name="description"/>
          <field name="image"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="ingredients.action_window">
      <field name="name">ingredients window</field>
      <field name="res_model">ingredients.ingredients</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="ingredients.action_server">
      <field name="name">ingredients server</field>
      <field name="model_id" ref="model_ingredients_ingredients"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="ingredients" id="ingredients.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="ingredients.menu_1" parent="ingredients.menu_root"/>
    <menuitem name="Menu 2" id="ingredients.menu_2" parent="ingredients.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="ingredients.menu_1_list" parent="ingredients.menu_1"
              action="ingredients.action_window"/>
    <menuitem name="Server to list" id="ingredients" parent="ingredients.menu_2"
              action="ingredients.action_server"/>
  </data>
</odoo>